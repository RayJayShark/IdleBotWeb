@{
    ViewData["Title"] = "Shop";
    Player castedPlayer = ViewBag.Player;
}

<h1>Shop</h1>

<ul class="list-group">
    @foreach (var item in (List<Item>)ViewBag.Items)
    {
        <li class="list-group-item">
            <button onclick="Confirm('@castedPlayer.Id', @item.Id, @item.Cost)" class="btn btn-primary" id="@item.Id">Buy</button>  $@item.Cost - @item.Name
        </li>
    }
</ul>
<div>Money: <span id="money">@castedPlayer.Money</span></div>

<script src="~/js/shop.js" asp-append-version="true"></script>