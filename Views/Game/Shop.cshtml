
@{
    ViewData["Title"] = "Shop";
    Player castedPlayer = ViewBag.Player;
}

<h1>Shop</h1>

<ul class="list-group">
    @foreach (var item in (List<Item>)ViewBag.Items)
    {
    <li class="list-group-item">
        <button onclick="Confirm(@item.Id)" class="btn btn-primary" id="@item.Id">Buy</button>  $@item.Cost - @item.Name
    </li>
    }
</ul>
<div>Money: @castedPlayer.Money</div>

<script src="~/js/site.js"></script>